<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.mredrock.freshmanspecial.view.dataFragments.MostDifficultFragment">

    <Button
        android:id="@+id/mostDifficult_button"
        android:text="请选择学院"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/special_2017_button_background"
        android:textColor="#959C9F"
        android:gravity="center_vertical"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/mostDifficult_button_major"
        android:text="请选择专业"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:padding="18dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/special_2017_button_background"
        android:textColor="#959C9F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.mredrock.freshmanspecial.Units.CircleChart
        android:id="@+id/mostDifficult_chart"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="280dp" />

    <com.mredrock.freshmanspecial.Units.SmallCircle
        android:id="@+id/mostDifficult_circle"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_height="80dp" />

</LinearLayout>
