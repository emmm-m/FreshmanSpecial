<!-- 军训照片幻灯片格式 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.mredrock.freshmanspecial.view.SlideActivity">

    <com.mredrock.freshmanspecial.Units.MyViewPager
        android:id="@+id/slide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/slide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="share"
        >
        <TextView
            android:id="@+id/slide_progress"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:text="1/6"
            android:background="#8b000000"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <TextView
            android:alpha="0.7"
            android:id="@+id/slide_title"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:background="#8b000000"
            android:layout_height="150dp"
            android:textColor="@color/colorWhite"
            android:gravity="top|center"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</FrameLayout>
