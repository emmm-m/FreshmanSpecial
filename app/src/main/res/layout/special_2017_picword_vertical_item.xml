<?xml version="1.0" encoding="utf-8"?>
<!--专题 ： 邮子攻略；界面 ： recycler 排版纵向，学校寝室、食堂、环境 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginTop="6dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="19dp"
            android:adjustViewBounds="true"
            app:cardCornerRadius="8dp"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            android:transitionName="share">
            <ImageView
                android:id="@+id/picword_vertical_item_image"
                android:background="#d6d6d6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/picwod_vertical_picture_linear"
            android:layout_width="53dp"
            android:layout_height="19dp"
            android:visibility="gone"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/special_2017_shape_num"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/special_2017_picture_number"/>

            <TextView
                android:id="@+id/picwod_vertical_picture_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="张"
                android:textColor="#FFFFFF"
                android:textSize="12dp"/>
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/picword_vertical_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/colorDeepGray"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/picwod_vertical_dormitory_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            android:text=""
            android:textColor="@color/tabTextColor"
            android:textSize="13dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/picword_vertical_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/tabTextColor"
        android:textSize="13dp"/>

</LinearLayout>